<div>
  <div class="container-fluid text-center">
    <h1>Signup</h1>
  </div>
<hr>

<form class="" method="post" action="/signup">
    <div class="row">
      <div class="col-lg-12 col-md-12 text-center">
        <label for="email" class="control-label">Username</label>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
        <input type="text" class="form-control" name="username" id="username" placeholder="Username">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 text-center">
        <label for="password" class="control-label">Password</label>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
        <input type="password" class="form-control" name="password" id="password" placeholder="Password must be at least 8 characters">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 text-center">
        <label for="confirmPassword" class="control-label">Confirm Password</label>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
        <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Re-type password">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 text-center">
        <label for="username" class="control-label">Email</label>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
        <input type="text" class="form-control" name="email" id="email" placeholder="Email">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 text-center">
        <label class="control-label">Account Type</label>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-4 col-lg-offset-5 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">  
        <div class="col-lg-6 text-left">
          <div class="radio">
            <label>
            <input type="radio" name="optionsRadios" id="optionsRadios1" value="Business">
            Business
            </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="optionsRadios" id="optionsRadios2" value="Individual">
            Individual
          </label>
        </div>
      </div>
    </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 text-center">
        <a href="/" type="reset" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
</form>
