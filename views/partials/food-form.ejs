<div class="form-group">
  <label for="title">Title</label>
  <input type="text"
         class="form-control"
         id="title"
         name="title"
         value="<%= food.title %>">
</div>

<div class="form-group">
  <label for="completed">Completed</label>
  <input type="checkbox"
         class="form-control"
         id="completed"
         name="completed"
         <%= checked %> >
</div>
