<div class="form-group">
  <label for="name">Name</label>
  <input type="text"
         class="form-control"
         id="name"
         name="name"
         value="<%= food.name %>">
</div>

<div class="form-group">
  <label for="address">Address</label>
  <input type="text"
         class="form-control"
         id="address"
         name="address"
         value="<%= food.address %>">
</div>

<div class="form-group">
  <label for="date">Date</label>
  <input type="date"
         class="form-control"
         id="date"
         name="date"
         value="<%= food.date%>">
</div>

<div class="form-group">
  <label for="time">Time</label>
  <input type="time"
         class="form-control"
         id="time"
         name="time"
         value="<%= food.time %>">
</div>
